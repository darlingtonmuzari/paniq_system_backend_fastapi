# Staging Environment Configuration

# Database Configuration
DATABASE_HOST=postgres-service
DATABASE_PORT=5432
DATABASE_NAME=panic_system_staging
DATABASE_USER=panic_system_staging_user
DATABASE_PASSWORD=staging_password_123

# Redis Configuration
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=staging_redis_password

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
LOG_LEVEL=DEBUG
ENVIRONMENT=staging

# Security Configuration
JWT_SECRET_KEY=staging_jwt_secret_key_for_development_only
JWT_REFRESH_SECRET_KEY=staging_refresh_secret_key_for_development_only
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Rate Limiting (Relaxed for testing)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_EMERGENCY_REQUESTS_PER_MINUTE=50
RATE_LIMIT_AUTH_REQUESTS_PER_MINUTE=100

# External Services (Test/Sandbox)
SMS_PROVIDER=twilio
EMAIL_PROVIDER=sendgrid
PAYMENT_PROVIDER=stripe

# Twilio Configuration (Test)
TWILIO_ACCOUNT_SID=your_twilio_test_account_sid
TWILIO_AUTH_TOKEN=your_twilio_test_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Configuration (Test)
SENDGRID_API_KEY=your_sendgrid_test_api_key
SENDGRID_FROM_EMAIL=staging@panicsystem.com

# Stripe Configuration (Test)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_test_webhook_secret

# Google Play Integrity API (Test)
GOOGLE_PLAY_INTEGRITY_PROJECT_ID=your_test_gcp_project_id
GOOGLE_PLAY_INTEGRITY_PRIVATE_KEY=your_test_service_account_private_key

# Apple App Attest (Test)
APPLE_APP_ATTEST_TEAM_ID=your_test_apple_team_id
APPLE_APP_ATTEST_KEY_ID=your_test_apple_key_id
APPLE_APP_ATTEST_PRIVATE_KEY=your_test_apple_private_key

# Monitoring and Observability
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
JAEGER_ENABLED=true
JAEGER_AGENT_HOST=jaeger-agent
JAEGER_AGENT_PORT=6831

# Logging
LOG_FORMAT=json
LOG_FILE=/app/logs/application.log
LOG_MAX_SIZE=50MB
LOG_BACKUP_COUNT=5

# Caching (Reduced for testing)
CACHE_ENABLED=true
CACHE_TTL_SECONDS=60
CACHE_MAX_SIZE=1000

# File Storage
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# CORS Configuration (Permissive for testing)
ALLOWED_ORIGINS=*
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Background Tasks
CELERY_BROKER_URL=redis://:staging_redis_password@redis-service:6379/3
CELERY_RESULT_BACKEND=redis://:staging_redis_password@redis-service:6379/4
CELERY_WORKER_CONCURRENCY=2
CELERY_TASK_SOFT_TIME_LIMIT=300
CELERY_TASK_TIME_LIMIT=600

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60

# Performance Configuration
UVICORN_WORKERS=2
UVICORN_MAX_REQUESTS=500
UVICORN_MAX_REQUESTS_JITTER=50
UVICORN_TIMEOUT_KEEP_ALIVE=5

# Database Connection Pool
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=15
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600