# Production Environment Configuration
# DO NOT COMMIT ACTUAL SECRETS - USE KUBERNETES SECRETS INSTEAD

# Database Configuration
DATABASE_HOST=postgres-service
DATABASE_PORT=5432
DATABASE_NAME=panic_system
DATABASE_USER=panic_system_user
# DATABASE_PASSWORD - Set in Kubernetes Secret

# Redis Configuration
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD - Set in Kubernetes Secret

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# Security Configuration
# JWT_SECRET_KEY - Set in Kubernetes Secret
# JWT_REFRESH_SECRET_KEY - Set in Kubernetes Secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_EMERGENCY_REQUESTS_PER_MINUTE=5
RATE_LIMIT_AUTH_REQUESTS_PER_MINUTE=10

# External Services
SMS_PROVIDER=twilio
EMAIL_PROVIDER=sendgrid
PAYMENT_PROVIDER=stripe

# Twilio Configuration
# TWILIO_ACCOUNT_SID - Set in Kubernetes Secret
# TWILIO_AUTH_TOKEN - Set in Kubernetes Secret
# TWILIO_PHONE_NUMBER - Set in Kubernetes Secret

# SendGrid Configuration
# SENDGRID_API_KEY - Set in Kubernetes Secret
# SENDGRID_FROM_EMAIL - Set in Kubernetes Secret

# Stripe Configuration
# STRIPE_SECRET_KEY - Set in Kubernetes Secret
# STRIPE_PUBLISHABLE_KEY - Set in Kubernetes Secret
# STRIPE_WEBHOOK_SECRET - Set in Kubernetes Secret

# Google Play Integrity API
# GOOGLE_PLAY_INTEGRITY_PROJECT_ID - Set in Kubernetes Secret
# GOOGLE_PLAY_INTEGRITY_PRIVATE_KEY - Set in Kubernetes Secret

# Apple App Attest
# APPLE_APP_ATTEST_TEAM_ID - Set in Kubernetes Secret
# APPLE_APP_ATTEST_KEY_ID - Set in Kubernetes Secret
# APPLE_APP_ATTEST_PRIVATE_KEY - Set in Kubernetes Secret

# Monitoring and Observability
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
JAEGER_ENABLED=true
JAEGER_AGENT_HOST=jaeger-agent
JAEGER_AGENT_PORT=6831

# Logging
LOG_FORMAT=json
LOG_FILE=/app/logs/application.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# Caching
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=10000

# File Storage
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# CORS Configuration
ALLOWED_ORIGINS=https://app.panicsystem.com,https://admin.panicsystem.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=10000
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Background Tasks
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis-service:6379/1
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis-service:6379/2
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_SOFT_TIME_LIMIT=300
CELERY_TASK_TIME_LIMIT=600

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60

# Performance Configuration
UVICORN_WORKERS=4
UVICORN_MAX_REQUESTS=1000
UVICORN_MAX_REQUESTS_JITTER=100
UVICORN_TIMEOUT_KEEP_ALIVE=5

# Database Connection Pool
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600